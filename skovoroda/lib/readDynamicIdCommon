import { skConstants } from "./skConstants";

export default function readDynamicIdCommon(id) {

  const deviceEnding = 
    id.includes(skConstants.desktopEnding) ? skConstants.desktopEnding
    : id.includes(skConstants.mobileEnding) ? skConstants.mobileEnding
    : "";

  const idWithoutEnding = id
    .replace(skConstants.desktopEnding, "")
    .replace(skConstants.mobileEnding, "");

  return {
    id: idWithoutEnding,
    deviceEnding: deviceEnding,
  }
}